{
  "name": "project.txt",
  "version": "0.0.1",
  "description": "A library for reading and evaluating project definitions in project.txt format.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run generate-sources && npm run compile",
    "clean": "rimraf -- build lib src/main/parser",
    "compile": "tsc",
    "test": "jest",
    "generate-sources": "antlr4ts -visitor src/grammar/ProjectTxtLexer.g4 src/grammar/ProjectTxtParser.g4 -o src/main/parser"
  },
  "author": "Jan Thom√§",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "antlr4ts-cli": "^0.5.0-alpha.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "rimraf": "^3.0.1",
    "ts-jest": "^25.1.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "@types/uuid": "^7.0.0",
    "antlr4ts": "^0.5.0-alpha.3",
    "date-fns": "^2.11.0",
    "moment": "^2.24.0",
    "uuid": "^7.0.2"
  }
}
